<% include partials/header %>

    <form class="ui form" action="/board/<%= message._id %>?_method=PUT" method="POST">

      <div class="field">
        <label>Title</label>
        <input type="text" placeholder="Title" name="post[title]" value="<%= message.title %>">
      </div>

      <div class="field">
        <label>Message</label>
        <textarea placeholder="Message" name="post[message]"><%= message.message %></textarea>
      </div>

      <div class="field">
        <button class="ui button" type="submit">Submit</button>
      </div>

    </form>

